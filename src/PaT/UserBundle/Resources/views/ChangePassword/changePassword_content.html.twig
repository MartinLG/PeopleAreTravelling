{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
      <div class="form-group register_fields">
        {{ form_label(form.current_password, "Current Password : ", {'label_attr': {'class': 'col-sm-offset-0 col-sm-3 control-label'}}) }}
        <div class="col-sm-7">
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control register_fields'}}) }}
        {{ form_errors(form.current_password, {'attr': {'class' : 'has-error register_fields'}}) }}
        </div>
      </div>

      <div class="form-group register_fields">
        {{ form_label(form.plainPassword.first, "Password : ", {'label_attr': {'class': 'col-sm-offset-0 col-sm-3 control-label'}}) }}  
        <div class="col-sm-7">
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control register_fields'}}) }}
        {{ form_errors(form.plainPassword.first, {'attr': {'class' : 'has-error register_fields'}}) }}
      </div>
      </div>

      <div class="form-group register_fields">
        {{ form_label(form.plainPassword.second, "Password again : ", {'label_attr': {'class': 'col-sm-offset-0 col-sm-3 control-label'}}) }}
        <div class="col-sm-7">
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control register_fields'}}) }}
        {{ form_errors(form.plainPassword.second, {'attr': {'class' : 'has-error register_fields'}}) }}
        </div>
      </div> 

      {{ form_widget(form) }}
    <div class="form-group">
      <div class="col-sm-offset-8 col-sm-2">
        <input type="submit" class="btn btn-primary" />
      </div>
    </div>

</form>