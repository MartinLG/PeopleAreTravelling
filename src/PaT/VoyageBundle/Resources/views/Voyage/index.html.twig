{% extends "PaTVoyageBundle::layout.html.twig" %}

{% block title %}
  Voyage - {{ parent() }}
{% endblock %}

{% block Column_centrale %}

	{# Deuxiéme colone #}
	<h3>Affichage de vos voyage</h3>

	<ul>
		
		{% for type, flashMessages in app.session.flashbag.all() %}
		    {% for flashMessage in flashMessages %}
		        <li><div class="table well well-lg flash-{{ type }}">
		            {{ flashMessage }}
		        </div></li>
		    {% endfor %}
		{% endfor %}
		
		{% for voyage in ListeVoyage %}
		<li  class="table well well-lg">
			<a class="lien" href="#">
				<table>
					<tr><td colspan="3" >{{voyage.Titre}}</td></tr>
					<tr><td width="33.3%"> Lieu : {{ voyage.lieu }}</td><td width="33.3%"> Durée : {{ voyage.duree }} jours</td><td width="33.4%"> Budget : {{ voyage.budget }}€</td></tr> 
					<tr><td colspan="3">Du {{ voyage.datedebut|date('d/m/Y') }} au {{ voyage.datefin|date('d/m/Y') }}</td></tr>
					<tr><td colspan="3">{{ voyage.description }}</td></tr>
				</table>
			</a>
			<table width="100%">
				<tr>
					<td width="50%"><a href="{{ path('pa_t_voyage_delete', { 'id' : voyage.id })}}"><button type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-trash"></span> Supprimer</button></a></td>
					<td width="50%"><a href="{{ path('pa_t_voyage_change', { 'id' : voyage.id })}}"><button type="button" class="btn btn-default btn-sm" href="#"><span class="glyphicon glyphicon-edit"></span> Modifier</button></a></td>
				</tr>
			</table>
		</li>

		{% endfor %}
	</ul>

{% endblock %}

